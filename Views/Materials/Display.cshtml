@model List<Material>

<body>
    <h1 class="text-center">@ViewData["Title"]</h1>
    @if (Model.Count > 0)
    {
        <hr />
        <div id="materials-container">
            @foreach (Material m in Model)
                {
                <div id="@m.Name" class="material">
                    <a href="/Materials/At?name=@(m.Name)" class="material-name">@(m.Name)</a><p class="material-category">@(m.Category.Split('-')[1])</p>
                </div>
                }
        </div>
        <hr />
    }
    else
    {
        <h1 class="text-center">Упс! тут пока ничего нет</h1>
    }
    <div class="align-content-center">
    <a onclick="document.forms[0].submit()"><form hidden asp-action="Create" asp-controller="Materials" method="post" accept-charset="utf-8">
        <input type="hidden" value="@(ViewData["Title"])"/></form>
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-plus-square" viewBox="0 0 16 16">
            <path d="M14 1a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
        </svg>
    </a>
    </div>
</body>
